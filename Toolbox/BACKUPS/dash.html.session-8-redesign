        // Professional color palette
        const colors = {
            bullish: '#26a69a',      // Teal
            bearish: '#ef5350',       // Red
            neutral: '#8b93a6',       // Blue-gray
            positive: '#10b981',      // Emerald
            negative: '#ef4444',      // Red
            warning: '#f59e0b',       // Amber
            primary: '#3b82f6',       // Blue
            accent: '#7c3aed',        // Purple
            text: '#e8edf4',
            secondary: '#9ba3b3',
            tertiary: '#6b7280',
            gridColor: 'rgba(45, 55, 72, 0.3)'
        };

        // Chart.js defaults
        Chart.defaults.color = colors.secondary;
        Chart.defaults.borderColor = colors.gridColor;

        // 1. Score Gauge Chart
        const gaugeCtx = document.getElementById('scoreGaugeChart').getContext('2d');
        new Chart(gaugeCtx, {
            type: 'doughnut',
            data: {
                labels: ['Signal Score', 'Remaining'],
                datasets: [{
                    data: [64.45, 35.55],
                    backgroundColor: [colors.primary, colors.gridColor],
                    borderColor: colors.gridColor,
                    borderWidth: 2,
                    circumference: 180,
                    rotation: 270
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false },
                    tooltip: { enabled: true }
                }
            }
        });

        // 2. Component Breakdown Chart
        const componentCtx = document.getElementById('componentChart').getContext('2d');
        new Chart(componentCtx, {
            type: 'bar',
            data: {
                labels: ['Trend', 'Breadth', 'Volatility', 'Sentiment', 'Technical'],
                datasets: [{
                    label: 'Component Score',
                    data: [70, 65, 60, 58, 65],
                    backgroundColor: [
                        colors.primary,
                        colors.primary,
                        colors.warning,
                        colors.warning,
                        colors.primary
                    ],
                    borderRadius: 8,
                    borderSkipped: false
                }]
            },
            options: {
                indexAxis: 'x',
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        max: 100,
                        ticks: { color: colors.secondary }
                    },
                    x: {
                        ticks: { color: colors.secondary }
                    }
                }
            }
        });

        // 3. Sector Allocation Chart
        const sectorCtx = document.getElementById('sectorChart').getContext('2d');
        new Chart(sectorCtx, {
            type: 'doughnut',
            data: {
                labels: ['Technology', 'Healthcare', 'Utilities', 'Crypto/DeFi', 'Hedging'],
                datasets: [{
                    data: [50, 20, 15, 10, 5],
                    backgroundColor: [colors.primary, colors.bullish, colors.positive, colors.accent, colors.warning],
                    borderColor: colors.gridColor,
                    borderWidth: 2
                }]
